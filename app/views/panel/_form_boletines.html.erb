<%= form_for(@obj, :remote => true, :url => {:controller => "panel", :action => (action_name == "editar" ? "editar" : "crear"), :params => {:set => params[:set], :id => (@obj.id if action_name == "editar")}}, :html => { :multipart => true }) do |f| %>
  <% if @obj.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@obj.errors.count, "error") %> prohibited this frase from being saved:</h2>

      <ul>
      <% @obj.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <div class="field">
    <%= f.label :titulo, "Título" %><br>
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :fecha, "Fecha de lanzamiento" %><br>
    <%= f.text_field :fecha, class: "fechas" %>
  </div>
  <div class="field" style="height:250px;">
		<div class="photo-upload">
    <%= f.label :documento, raw('<span class="glyphicon glyphicon-upload glyph-padding"></span>Añadir boletín') %><br>
    <%= f.file_field :documento, :onchange => "readURL(this,'#foto-portada')" %><br>
		</div>
		<div class="img-display" id="foto-portada">
			<% if !@obj.documento.url.nil? %>
				<img src="<%= @obj.documento.url %>">
			<% else %>
				<span>No hay boletín para mostrar.</span>
			<% end %>
		</div>
  </div>
  <div class="actions">
    <%= f.submit "Guardar boletín" %>
  </div>

<script>
	$(".fechas").datepicker({
		format: "yyyy-mm-dd", language: "es-MX", autoclose: true, todayBtn: "linked", todayHighlight: true, clearBtn: true
	});
</script>
<% end %>
