                              html_toggle = html_toggle + '<p class="text-left"><strong class="azul-obscuro">Líneas de investigación:</strong> <span><%= p.temas.html_safe %></span></p>';
<% end %>
                            html_toggle = html_toggle + '</div>' +
                          '</div>' +
                        '</dd>'
<% end %>
$("#toggle").html(html_toggle);
