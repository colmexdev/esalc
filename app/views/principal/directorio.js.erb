                          '<a href="#"><h5 class="m-0 text-left"><%= p.nombre %></h5></a>' +
                        '</dt>' +
                        '<dd>' +
                          '<div class="row">' +
                            '<div class="col-md-6">' +
                              '<p class="text-left"><strong class="azul-obscuro">Correo electrónico:</strong> <a href="<%= 'mailto:'+p.correo %>" target="_blank" class="a-inv"><%= p.correo %></a></p>' +
