<script>
function filter(f_ids){
	var where = "", multi = false, val;
	for(var i=0;i<f_ids.length;i++){
		val = $("#"+f_ids[i]).val();
		where = where + (val != "" ? "&conds["+f_ids[i]+"]="+$("#"+f_ids[i]).val() : "");
	}
	$.ajax({
		url: "/directorio.js?offset=0" + where,
		success: function(){}
	});
}

function clean(){
	$("#nombre").val("");
	$("#centros").val("");
	$.ajax({
		url: "/directorio.js?offset=0",
		success: function(){}
	});
}
</script>
